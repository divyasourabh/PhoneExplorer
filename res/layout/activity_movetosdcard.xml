<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/pop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#98262a39"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sdcard_image_left_margin"
            android:layout_marginTop="@dimen/sdcard_image_top_margin"
            android:src="@drawable/pointer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sdcard_text_left_margin"
            android:layout_marginRight="30dp"
            android:layout_marginTop="@dimen/sdcard_text_top_margin"
            android:background="@android:color/background_dark"
            android:padding="4dp"
            android:singleLine="false"
            android:text="@string/sdcard_help_text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sdcard_help_text_size"
            android:textStyle="bold" />

        <!--
         <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

        -->

    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_in_apps_ad_unit_id" />

</RelativeLayout>